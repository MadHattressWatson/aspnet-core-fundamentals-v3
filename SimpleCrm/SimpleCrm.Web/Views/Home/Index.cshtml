@model SimpleCrm.Web.Models.Home.HomePageViewModel

<html>
    <head>
      <title>Simple CRM</title>
  </head>

<body>
    <h1>Customers</h1>
    <p>
        @Model.CurrentMessage

    </p>
    <table>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td><a href="/home/details/@customer.Id">Details</a></td>
                <td>@Html.ActionLink("View", "Details", new{id=customer.Id})</td>
                {
                    return RedirectToAction (nameof(ICustomerData));
                }
                <td>@customer.Id</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.PhoneNumber</td>
            </tr>
        }

    </table>
</body>
</html>

