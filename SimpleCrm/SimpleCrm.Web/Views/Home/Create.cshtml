@model CustomerEditViewModel
 

@{
    ViewBag.Title = "Create";
}


<div>

    <h1>Create</h1>
   

    <div>
        @using(Html.BeginForm())
        {
            <div>
                @Html.LabelFor( x => x.FirstName)
                @Html.TextBoxFor( x => x.FirstName)
                @Html.ValidationMessageFor(x => x.FirstName)
            </div>

            <div>
            @Html.LabelFor( x => x.LastName)
            @Html.TextBoxFor( x => x.LastName)
            @Html.ValidationMessageFor(x => x.LastName)
            </div>

            <div>
               @Html.LabelFor(x => x.PhoneNumber) @Html.EditorFor(x => x.PhoneNumber)
               @Html.ValidationMessageFor(x => x.PhoneNumber)
            </div>

            <div>
                @Html.LabelFor(x => x.Type)
                @Html.DropDownListFor( x => x.Type, Html.GetEnumSelectList(typeof(CustomerType)))
            </div>

            <div>
                @Html.LabelFor(x=>x.OptInNewsletter)
                @Html.CheckBoxFor( x => x.OptInNewsletter)
            </div>
            <div>
                <input type = "Submit" value = "Save" />
            </div>
           }
    </div>
</div>